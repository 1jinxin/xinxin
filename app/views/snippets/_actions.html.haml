.hidden-xs
  = link_to new_snippet_path, class: "btn btn-grouped btn-create new-snippet-link", title: "新建代码片段" do
    = icon('plus')
    新建代码片段
  - if can?(current_user, :update_personal_snippet, @snippet)
    = link_to edit_snippet_path(@snippet), class: "btn btn-grouped snippable-edit" do
      编辑
  - if can?(current_user, :admin_personal_snippet, @snippet)
    = link_to snippet_path(@snippet), method: :delete, data: { confirm: "确认删除?" }, class: "btn btn-grouped btn-warning", title: '删除代码片段' do
      删除
.visible-xs-block.dropdown
  %button.btn.btn-default.btn-block.append-bottom-0.prepend-top-5{ data: { toggle: "dropdown" } }
    选项
    %span.caret
  .dropdown-menu.dropdown-menu-full-width
    %ul
      %li
        = link_to new_snippet_path, title: "新建代码片段" do
          新建代码片段
      - if can?(current_user, :update_personal_snippet, @snippet)
        %li
          = link_to edit_snippet_path(@snippet) do
            编辑
      - if can?(current_user, :admin_personal_snippet, @snippet)
        %li
          = link_to snippet_path(@snippet), method: :delete, data: { confirm: "确认删除?" }, title: '删除代码片段' do
            删除
