%ul
  = nav_link(path: ['dashboard#show', 'root#show', 'projects#trending', 'projects#starred', 'projects#index'], html_options: {class: 'home'}) do
    = link_to explore_root_path, title: '项目', class: 'dashboard-shortcuts-projects' do
      .shortcut-mappings
        .key
          = icon('arrow-up', 'aria-label' => 'hidden')
          P
      %span
        项目
  = nav_link(controller: [:groups, 'groups/milestones', 'groups/group_members']) do
    = link_to explore_groups_path, title: '群组', class: 'dashboard-shortcuts-groups' do
      .shortcut-mappings
        .key
          = icon('arrow-up', 'aria-label' => 'hidden')
          G
      %span
        群组
  = nav_link(controller: :snippets) do
    = link_to explore_snippets_path, title: '代码片段', class: 'dashboard-shortcuts-snippets' do
      .shortcut-mappings
        .key
          = icon('arrow-up', 'aria-label' => 'hidden')
          S
      %span
        代码片段
  %li.divider
  = nav_link(controller: :help) do
    = link_to help_path, title: '帮助' do
      %span
        帮助
